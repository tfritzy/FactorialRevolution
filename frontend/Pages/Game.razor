<div class="game-container">
    <div id="gameCanvas"></div>
    @if (_gameState.IsUIOpen)
    {
        <div id="tile-ui" class="tile-ui">
            <div class="tile-ui-content">
                <h3>Tile Info</h3>
                <p>Position: (@_gameState.ActiveTile?.X, @_gameState.ActiveTile?.Y)</p>
                <p>Type: @_gameState.ActiveTileType</p>
                <button @onclick="CloseTileUI">Close</button>
            </div>
        </div>
    }
</div>

<style>
    .game-container {
        width: 100%;
        height: 100vh;
        position: relative;
    }

    #gameCanvas {
        width: 100%;
        height: 100%;
    }

    .tile-ui {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 20px;
        border-radius: 8px;
        z-index: 1000;
    }

    .tile-ui-content {
        text-align: center;
    }

    .tile-ui button {
        background: #4CAF50;
        border: none;
        padding: 8px 16px;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
    }

    .tile-ui button:hover {
        background: #45a049;
    }
</style>